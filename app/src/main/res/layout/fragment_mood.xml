<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MoodFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_mood_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood Journal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Emoji Selector Row -->
        <LinearLayout
            android:id="@+id/emoji_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/emoji_happy"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="ðŸ˜Š"
                android:textSize="28sp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/emoji_sad"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="ðŸ˜¢"
                android:textSize="28sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/emoji_angry"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="ðŸ˜¡"
                android:textSize="28sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/emoji_relaxed"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="ðŸ˜Œ"
                android:textSize="28sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Add Mood Note -->
        <EditText
            android:id="@+id/et_mood_note"
            android:layout_width="match_parent"
            android:layout_height="56dp"
        android:hint="Add a note about your mood..."
        android:layout_marginBottom="12dp"
        android:padding="12dp" />

        <!-- Save Mood Button -->
        <Button
            android:id="@+id/btn_save_mood"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Save Mood"
            android:layout_gravity="center_horizontal" />

        <!-- Mood History -->
        <TextView
            android:id="@+id/tv_mood_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Past Mood Entries"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_moods"
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

        <!-- Share Mood Button -->
        <Button
            android:id="@+id/btn_share_mood"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share Mood Summary"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</FrameLayout>
