<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A1E9BC"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->

    <!-- Reminder Switch with proper touch target -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:paddingRight="50dp"
        android:text="          Hydration Tracker"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tvReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text="    Enable Reminders"
            android:textSize="18sp" />

        <!-- FrameLayout ensures min touch target -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <Switch
                android:id="@+id/switchReminder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>

    <!-- Button to add new time slot -->

    <!-- RecyclerView for time slots -->
    <Button
        android:id="@+id/btnAddTimeSlot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Time Slot"
        android:textColorLink="#CAA0A0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeSlots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" />

    <!-- Daily water intake -->
    <TextView
        android:id="@+id/tvTotalWater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Today's Water Intake: 0.0 L"
        android:textSize="18sp" />
</LinearLayout>
