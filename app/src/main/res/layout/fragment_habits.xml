<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".HabitsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="top"> <!-- ðŸ”¹ Align content to top -->

        <!-- Title -->
        <TextView
            android:id="@+id/tv_habits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="45dp"
            android:paddingBottom="8dp"
            android:text="Daily Habits"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_habits"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progress="50"
            android:progressTint="@android:color/holo_blue_light"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/tv_habit_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Progress: 50%"
            android:layout_marginBottom="12dp" />

        <!-- Habit List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_habits"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

    </LinearLayout>

    <!-- Floating Add Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add Habit"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp" />

</FrameLayout>
